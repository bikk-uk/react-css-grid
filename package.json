{
  "name": "@react-css/grid",
  "version": "1.4.3",
  "description": "A thin wrapper to help make CSS Grid simpler and more expressive",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "test-watch-all": "jest --watchAll",
    "test-coverage": "yarn test && cat ./coverage/lcov.info | coveralls",
    "lint": "tsc --noEmit && eslint '*/**/*.{ts,tsx}' --quiet --fix",
    "build": "tsc",
    "clean": "rm -rf dist/*",
    "release": "yarn prepublishOnly && yarn test && yarn lint",
    "prepublishOnly": "yarn && yarn clean && yarn build",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bikk-uk/react-css-grid.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "css",
    "layout",
    "grid",
    "column",
    "row",
    "styles",
    "simpler",
    "expressive"
  ],
  "author": "bikk-uk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bikk-uk/react-css-grid/issues"
  },
  "homepage": "https://github.com/bikk-uk/react-css-grid#readme",
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "coveralls": "^3.1.0",
    "csstype": "^3.0.8",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.1",
    "snyk": "^1.622.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "snyk": true
}
